@model MVC_Project.Areas.Admin.models.Banner_Create_Update_VM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Tạo mới banner</h1>
<form method="post" asp-action="Create" enctype="multipart/form-data">
        <div>
            <hr />
                <dl class="row">
                <label asp-for="@Model.Title" class="col-sm-2"></label>
                <dd class="col-sm-10">
                    <input asp-for="@Model.Title" class="l" />
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </dd>

                <label asp-for="@Model.Description" class="col-sm-2"></label>
                <dd class="col-sm-10">
                    <input asp-for="@Model.Description" class="l" />
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </dd>
                <label asp-for="@Model.BannerImage" class="col-sm-2"></label>
                <dd class="col-sm-10">
                    <input asp-for="@Model.BannerImage" type="file" value="Upload" />
                    <span asp-validation-for="@Model.BannerImage" class="text-danger"></span>
                </dd
            </dl>
        </div>
        <div>
            <button type="submit" class="btn btn-rounded btn-primary float-left"><i class="fas fa-plus-square" style="margin-right:0.7em"></i>Save</button>
            <a asp-action="index" class="btn btn-rounded btn-success float-right"><i class="fas fa-caret-square-left" style="margin-right:0.7em"></i>Back</a>
        </div>
    </form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

